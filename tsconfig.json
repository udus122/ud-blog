{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ES2015",
    "module": "esnext",
    "lib": ["DOM", "ES2015"],
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "unist-util-find": ["./src/types/unist-util-find.d.ts"],
      "unist-util-remove": ["./src/types/unist-util-remove.d.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
